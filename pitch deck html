    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        
        document.getElementById('total-slides').textContent = totalSlides;

        function showSlide(n) {
            // Remove active class from current slide
            slides[currentSlide].classList.remove('active');
            slides[currentSlide].classList.add('prev');
            
            // Calculate new slide index
            const newSlide = (n + totalSlides) % totalSlides;
            
            // Small delay to ensure smooth transition
            setTimeout(() => {
                // Remove prev class from all slides
                slides.forEach(slide => slide.classList.remove('prev'));
                
                // Update current slide
                currentSlide = newSlide;
                slides[currentSlide].classList.add('active');
                document.getElementById('current-slide').textContent = currentSlide + 1;
            }, 50);
        }

        function nextSlide() {
            showSlide(currentSlide + 1);
        }

        function previousSlide() {
            showSlide(currentSlide - 1);
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                nextSlide();
            } else if (e.key === 'ArrowLeft') {
                previousSlide();
            }
        });

        // Touch/swipe support for mobile
        let touchStartX = 0;
        let touchEndX = 0;

        document.addEventListener('touchstart', function(e) {
            touchStartX = e.changedTouches[0].screenX;
        });

        document.addEventListener('touchend', function(e) {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        });

        function handleSwipe() {
            if (touchEndX < touchStartX - 50) {
                nextSlide();
            }
            if (touchEndX > touchStartX + 50) {
                previousSlide();
            }
        }
        
        // Video handling
        const introVideo = document.getElementById('intro-video');
        
        // Auto-advance to next slide when video ends
        if (introVideo) {
            introVideo.addEventListener('ended', function() {
                setTimeout(() => {
                    nextSlide();
                }, 1000); // 1 second delay after video ends
            });
            
            // Pause video when leaving the first slide
            function pauseVideoOnSlideChange() {
                if (currentSlide !== 0 && introVideo) {
                    introVideo.pause();
                }
            }
            
            // Add event listener to pause video when navigating away
            document.addEventListener('keydown', function(e) {
                if (currentSlide === 0 && (e.key === 'ArrowRight' || e.key === ' ')) {
                    pauseVideoOnSlideChange();
                }
            });
        }
        
        // Initialize presentation on load
        document.addEventListener('DOMContentLoaded', function() {
            // Ensure first slide is active
            slides[0].classList.add('active');
            document.getElementById('current-slide').textContent = '1';
            
            // Start video if on first slide
            if (introVideo && currentSlide === 0) {
                introVideo.play().catch(e => {
                    console.log('Video autoplay prevented by browser:', e);
                });
            }
        });
        
        // Fallback initialization for immediate execution
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                slides[0].classList.add('active');
            });
        } else {
            slides[0].classList.add('active');
        }
    </script>
</body>
</html>
